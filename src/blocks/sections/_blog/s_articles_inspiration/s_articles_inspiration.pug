+section("s-articles-inspiration", 'Where Inspiration', 'meets education', '', false)
  .s-articles-inspiration__items
    each item in inspiration
      if item.text
        .s-articles-inspiration__card.s-articles-inspiration__card--text
          .s-articles-inspiration__card-text=item.text
      else
        .s-articles-inspiration__card.s-articles-inspiration__card--image
          img.s-articles-inspiration__card-image(src=item.image, alt="")
