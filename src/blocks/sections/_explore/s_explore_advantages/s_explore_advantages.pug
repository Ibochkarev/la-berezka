+section("s-explore-advantages", "", "", "", false)
  .s-explore-advantages__slider.swiper-container
    button.s-explore-advantages__button.s-explore-advantages__button-prev(type="button")
      <svg width="18" height="14" viewBox="0 0 18 14" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M18 6.96606L9.5 6.96606L1 6.96606M1 6.96606L7.5 13.4661M1 6.96606L7.5 0.466064" stroke="#1F1E20"/>
      </svg>
    button.s-explore-advantages__button.s-explore-advantages__button-next(type="button")
      <svg width="18" height="14" viewBox="0 0 18 14" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M-5.68248e-07 6.96606L8.5 6.96607L17 6.96607M17 6.96607L10.5 0.466065M17 6.96607L10.5 13.4661" stroke="#1F1E20"/>
      </svg>
    .swiper-wrapper
      each advantage in advantages
        .swiper-slide.s-explore-advantages__slide
          .s-explore-advantages__item
            .s-explore-advantages__item-image
              img(src=advantage.image, alt="")
            .s-explore-advantages__item-alt=advantage.alt
            if advantage.isLink === true
              a.s-explore-advantages__item-title.s-explore-advantages__item-link(href="")=advantage.title
            else
              .s-explore-advantages__item-title=advantage.title
            .s-explore-advantages__item-text=advantage.text
