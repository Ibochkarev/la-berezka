  const advantages = [
    {
      image: "./img/s-explore-advantages/1.jpg",
      alt: "Master class in La Berёzka’s Art Atelier",
      isLink: true,
      title: "Art atelier",
      text: "Our Art Atelier is much more than just a place for artistic expression, it's a veritable journey through the great works of the classical painters who gave rise to the greatest movements in the history of painting.",
    },
    {
      image: "./img/s-explore-advantages/2.jpg",
      alt: "Rose Marine Restaurant",
